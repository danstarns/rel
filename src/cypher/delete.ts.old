import { cypher } from "./cypher"

export type CrudDeleteOpts = {}

async function crudDelete(
  label: string,
  id: string,
  opts: CrudDeleteOpts = {}
) {
  const res = (await cypher1(
    `
      MATCH (node:${label})
      WHERE node.id = "${id}"
      DETACH DELETE node;
    `
  )) as CrudCypherResponse

  return true
}
